<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!-- O ScrollPane garante que o conteúdo não seja cortado em telas menores -->
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartmeeting.frontend.EditReuniaoController"
            fitToWidth="true" styleClass="modal-scroll-pane">
    <stylesheets>
        <URL value="@styles.css"/>
        <URL value="@edit-reuniao.css"/>
    </stylesheets>

    <!-- VBox principal com alinhamento central e espaçamento generoso -->
    <VBox alignment="TOP_CENTER" spacing="25" styleClass="modal-content">
        <padding>
            <Insets top="30" right="50" bottom="30" left="50"/>
        </padding>

        <Label text="Detalhes da Reunião" styleClass="h2"/>
        <Separator styleClass="separator-modern"/>

        <!-- Usando TitledPane para agrupamento lógico, como sugerido -->
        <VBox spacing="20" maxWidth="700">
            <!-- Grupo 1: Detalhes da Reunião -->
            <TitledPane text="Detalhes Principais" collapsible="false" styleClass="form-section">
                <VBox spacing="15">
                    <VBox styleClass="field-group">
                        <Label text="Pauta da Reunião" styleClass="form-label-above"/>
                        <TextField fx:id="pautaField" styleClass="form-input"/>
                    </VBox>
                    <VBox styleClass="field-group">
                        <Label text="Sala" styleClass="form-label-above"/>
                        <TextField fx:id="salaField" styleClass="form-input"/>
                    </VBox>
                </VBox>
            </TitledPane>

            <!-- Grupo 2: Data e Hora -->
            <TitledPane text="Agendamento" collapsible="false" styleClass="form-section">
                <!-- HBox para colocar campos relacionados lado a lado -->
                <HBox spacing="20">
                    <VBox HBox.hgrow="ALWAYS" styleClass="field-group">
                        <Label text="Data e Hora (dd/MM/yyyy HH:mm)" styleClass="form-label-above"/>
                        <TextField fx:id="dataHoraField" styleClass="form-input" promptText="Ex: 25/12/2024 14:30"/>
                    </VBox>
                    <VBox styleClass="field-group" minWidth="150">
                        <Label text="Duração (minutos)" styleClass="form-label-above"/>
                        <TextField fx:id="duracaoField" styleClass="form-input" prefWidth="150" promptText="em minutos"/>
                    </VBox>
                </HBox>
            </TitledPane>

            <!-- Grupo 3: Pessoas -->
            <TitledPane text="Pessoas" collapsible="false" styleClass="form-section">
                <VBox spacing="15">
                    <VBox styleClass="field-group">
                        <Label text="Organizador" styleClass="form-label-above"/>
                        <!-- Campo não editável, como sugerido -->
                        <TextField fx:id="organizadorField" styleClass="form-input-disabled" editable="false"/>
                    </VBox>
                    <VBox styleClass="field-group">
                        <Label text="Participantes (e-mails separados por vírgula)" styleClass="form-label-above"/>
                        <!-- TextArea para melhor usabilidade -->
                        <TextArea fx:id="participantesTextArea" prefRowCount="3" wrapText="true" styleClass="form-textarea"/>
                    </VBox>
                </VBox>
            </TitledPane>

            <!-- Grupo 4: Conteúdo -->
            <TitledPane text="Conteúdo da Reunião" collapsible="false" styleClass="form-section">
                <VBox spacing="15">
                    <VBox styleClass="field-group">
                        <Label text="Ata da Reunião" styleClass="form-label-above"/>
                        <!-- TextArea para a Ata, como sugerido -->
                        <TextArea fx:id="ataTextArea" prefRowCount="6" wrapText="true" styleClass="form-textarea"/>
                    </VBox>
                    <VBox spacing="10" styleClass="field-group">
                        <Label text="Tarefas Associadas" styleClass="form-label-above"/>
                        <!-- VBox para conter as tarefas dinamicamente, como esperado pelo controller -->
                        <VBox fx:id="tasksContainer" spacing="5" styleClass="tasks-container"/>
                        <Button text="+ Adicionar Tarefa" styleClass="secondary-button-small"/>
                    </VBox>
                </VBox>
            </TitledPane>
        </VBox>

        <Label fx:id="statusLabel" visible="false" managed="false" styleClass="status-label"/>

        <!-- Botões de Ação no final -->
        <HBox spacing="12" alignment="CENTER_RIGHT" maxWidth="700">
            <Button text="Cancelar" styleClass="secondary-button"/>
            <Button fx:id="editButton" text="Salvar Alterações" onAction="#handleEditReuniao" styleClass="primary-button"/>
        </HBox>
    </VBox>
</ScrollPane>
