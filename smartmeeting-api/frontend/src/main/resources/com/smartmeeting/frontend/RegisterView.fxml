<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartmeeting.frontend.RegisterController" prefHeight="500.0" prefWidth="700.0" id="register-root">
    <stylesheets>
        <String>@styles.css</String>
        <String>@register.css</String>
    </stylesheets>

    <!-- Painel Esquerdo (Branding) -->
    <VBox fx:id="leftPanel" alignment="CENTER" prefWidth="250.0" styleClass="left-panel">
        <Label text="SmartMeeting" styleClass="brand-title" />
    </VBox>

    <!-- Painel Direito (Formulário de Registro) -->
    <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS" styleClass="right-panel">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
        </padding>

        <Label text="Crie sua conta">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <VBox spacing="10.0" maxWidth="300.0">
            <Label text="Nome" styleClass="form-label"/>
            <TextField fx:id="nameField" promptText="Seu nome completo" styleClass="form-input"/>

            <Label text="Email" styleClass="form-label"/>
            <TextField fx:id="emailField" promptText="seu@email.com" styleClass="form-input"/>

            <Label text="Senha" styleClass="form-label"/>
            <PasswordField fx:id="passwordField" promptText="mínimo 8 caracteres" styleClass="form-input"/>

            <Label text="Confirmar Senha" styleClass="form-label"/>
            <PasswordField fx:id="confirmPasswordField" promptText="repita a senha" styleClass="form-input"/>

            <!-- Removido: Label e ComboBox para seleção de Papel -->

            <Label text="Crachá ID (Opcional)" styleClass="form-label"/>
            <TextField fx:id="crachaIdField" promptText="ID do crachá" styleClass="form-input"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10.0" maxWidth="300.0">
            <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" text="Cadastrar" styleClass="login-button" defaultButton="true" maxWidth="Infinity"/>
            <Label fx:id="statusLabel" styleClass="status-label" managed="false" visible="false"/>
        </VBox>

        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Já tem uma conta?" />
            <Hyperlink text="Entrar" onAction="#handleLoginLinkAction" />
        </HBox>
    </VBox>
</HBox>

