<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartmeeting.frontend.CreateReuniaoController" prefHeight="620.0" prefWidth="820.0" id="create-reuniao-root">
    <stylesheets>
        <URL value="@styles.css"/>
        <URL value="@create-reuniao.css"/>
    </stylesheets>

    <!-- Formulário de Criação (sem painel esquerdo) -->
    <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS" styleClass="right-panel">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
        </padding>

        <Label text="Criar Nova Reunião" styleClass="modal-title"/>

        <!-- Indicador de progresso do wizard (oculto para design minimalista) -->
        <HBox alignment="CENTER_RIGHT" maxWidth="900" visible="false" managed="false">
            <Label fx:id="wizardProgressLabel" text="Passo 1 de 3" styleClass="welcome-label"/>
        </HBox>

        <!-- Wizard de 3 passos -->
        <StackPane fx:id="wizardStack" maxWidth="900">
            <!-- Passo 1: informações principais -->
            <VBox fx:id="step1Pane" spacing="14" styleClass="detail-card-panel" StackPane.alignment="TOP_CENTER">
                <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="140" halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Pauta:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                    <TextField fx:id="pautaField" promptText="Assunto da reunião" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.valignment="CENTER" styleClass="form-input" maxWidth="Infinity"/>

                    <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                    <VBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.valignment="CENTER">
                        <DatePicker fx:id="datePicker" promptText="Selecione a data" styleClass="form-input no-arrows" maxWidth="Infinity"/>
                    </VBox>

                    <Label text="Duração (min):" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
                    <TextField fx:id="duracaoField" promptText="Duração em minutos" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.valignment="CENTER" styleClass="form-input" maxWidth="Infinity"/>

                    <Label text="Sala:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
                    <ComboBox fx:id="salaComboBox" promptText="Selecione a sala" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.valignment="CENTER" styleClass="form-input" maxWidth="Infinity"/>

                    <Label text="Organizador:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
                    <ComboBox fx:id="organizadorComboBox" promptText="Selecione o organizador" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.valignment="CENTER" styleClass="form-input" maxWidth="Infinity"/>
                </GridPane>
            </VBox>

            <!-- Passo 2: participantes -->
            <VBox fx:id="step2Pane" spacing="14" styleClass="detail-card-panel" StackPane.alignment="TOP_CENTER" prefWidth="420" visible="false" managed="false">
                <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
                <Label text="Participantes:" styleClass="form-label"/>
                <GridPane hgap="10" vgap="6">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="170"/>
                        <ColumnConstraints prefWidth="50"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS"/>
                    </rowConstraints>

                    <VBox spacing="6" GridPane.columnIndex="0">
                        <Label text="Disponíveis" styleClass="form-label"/>
                        <ListView fx:id="participantesDisponiveisListView" prefHeight="180" prefWidth="170" maxHeight="Infinity" maxWidth="170"/>
                    </VBox>

                    <VBox spacing="6" alignment="CENTER" GridPane.columnIndex="1">
                        <Button fx:id="addParticipantButton" text="▶" onAction="#handleAddParticipants" prefWidth="40"/>
                        <Button fx:id="removeParticipantButton" text="◀" onAction="#handleRemoveParticipants" prefWidth="40"/>
                    </VBox>

                    <VBox spacing="6" GridPane.columnIndex="2">
                        <Label text="Selecionados" styleClass="form-label"/>
                        <ListView fx:id="participantesSelecionadosListView" prefHeight="180" prefWidth="170" maxHeight="Infinity" maxWidth="170"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Passo 3: ata -->
            <VBox fx:id="step3Pane" spacing="14" styleClass="detail-card-panel" StackPane.alignment="TOP_CENTER" prefWidth="420" visible="false" managed="false">
                <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
                <Label text="Ata (Opcional):" styleClass="form-label"/>
                <TextArea fx:id="ataTextArea" promptText="Ata da reunião" prefRowCount="8"/>
            </VBox>

        </StackPane>

        <!-- Barra de navegação do wizard -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0" maxWidth="900">
            <Button fx:id="navPrevButton" text="Voltar" onAction="#handlePrevStep" styleClass="secondary-button btn-sm" visible="false" managed="false"/>
            <Button fx:id="navNextButton" text="Próximo" onAction="#handleNextStep" styleClass="primary-button btn-sm"/>
            <Button fx:id="saveButton" text="Salvar Reunião" onAction="#handleSaveReuniao" styleClass="primary-button btn-sm" visible="false" managed="false"/>
        </HBox>

        <Label fx:id="statusLabel" styleClass="status-label" managed="false" visible="false"/>
    </VBox>
</HBox>