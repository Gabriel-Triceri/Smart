<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smartmeeting.frontend.CreateReuniaoController" prefHeight="620.0" prefWidth="820.0">

    <!-- Formulário de Criação (sem painel esquerdo) -->
    <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS" styleClass="right-panel small-form">
        <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
        </padding>

        <Label text="Criar Nova Reunião">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>

        <GridPane hgap="10" vgap="15" maxWidth="700">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="90" prefWidth="100" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Pauta:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="pautaField" promptText="Assunto da reunião" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
            <DatePicker fx:id="datePicker" promptText="Selecione a data" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Hora:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="timeField" promptText="HH:mm (ex: 14:30)" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Duração (min):" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="duracaoField" promptText="Duração em minutos" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Sala:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="salaComboBox" promptText="Selecione a sala" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Organizador:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="organizadorComboBox" promptText="Selecione o organizador" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="form-input" maxWidth="Infinity"/>

            <Label text="Participantes:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="form-label"/>
            <ListView fx:id="participantesListView" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="form-input" prefHeight="100" maxWidth="Infinity"/>

            <Label text="Ata (Opcional):" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextArea fx:id="ataTextArea" promptText="Ata da reunião" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="form-input" prefRowCount="3" maxWidth="Infinity"/>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" maxWidth="700">
            <Button fx:id="saveButton" text="Salvar Reunião" onAction="#handleSaveReuniao" styleClass="primary-button btn-sm"/>
            <Button fx:id="cancelButton" text="Cancelar" onAction="#handleCancel" styleClass="secondary-button btn-sm"/>
        </HBox>

        <Label fx:id="statusLabel" styleClass="status-label" managed="false" visible="false"/>
    </VBox>

</HBox>